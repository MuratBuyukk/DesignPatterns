@model DesignPattern.CQRS.CQRSPattern.Results.GetProductUpdateQueryResult
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="post">
        <label>Product ID</label>
        <input type="text" class="form-control" asp-for="ProductID" />
        <label>Product Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <label>Product Stock Count</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <label>Product Price</label>
        <input type="text" class="form-control" asp-for="Price" />
        <label>Description</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <button class="btn btn-success">Update Product</button>
    </form>
</div>
